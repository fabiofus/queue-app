'use client';

import { useState } from 'react';

export default function ResetForm({ slug }: { slug: string }) {
  const [pin, setPin] = useState('');
  const [loading, setLoading] = useState(false);

  async function reset() {
    if (!slug) return alert('Slug mancante');
    if (!pin) return alert('Inserisci il PIN');

    setLoading(true);
    try {
      const res = await fetch('/api/clerk/reset', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ slug, pin }),
      });

      if (!res.ok) {
        const data = await res.json().catch(() => ({}));
        const msg =
          data?.error === 'invalid_pin'
            ? 'PIN errato'
            : data?.error === 'pin_not_set'
            ? 'PIN non impostato (contatta ENG)'
            : data?.error || 'Errore reset';
        alert(msg);
        return;
      }

      alert('Contatore resettato ✅');
      setPin('');
    } finally {
      setLoading(false);
    }
  }

  return (
    <div className="max-w-md mx-auto p-6 space-y-4">
      <div className="text-2xl font-bold">Reset contatore</div>
      <div className="text-sm text-gray-600">
        Reparto: <b>{slug}</b>
      </div>

      <input
        className="border rounded-xl p-3 w-full"
        type="password"
        placeholder="PIN reset"
        value={pin}
        onChange={(e) => setPin(e.target.value)}
      />

      <button
        className="rounded-xl py-3 w-full bg-black text-white disabled:opacity-50"
        onClick={reset}
        disabled={loading}
      >
        {loading ? 'Reset…' : 'Reset'}
      </button>

      <div className="text-xs text-gray-500">Powered by ENG</div>
    </div>
  );
}
